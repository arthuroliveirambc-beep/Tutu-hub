Ele cria uma GUI com 2 bot√µes que podem ser movidos e usados para salvar/teleportar posi√ß√£o.
]]
-- Servi√ßos
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local mouse = player:GetMouse()
-- Vari√°vel para salvar a posi√ß√£o
local savedPosition = nil
-- Cria a ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "SalvarTeleporteGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")
-- Fun√ß√£o para criar bot√µes
local function createButton(name, text, position)
local button = Instance.new("TextButton")
button.Name = name
button.Text = text
button.Size = UDim2.new(0,150,0,50)
button.Position = position
button.BackgroundColor3 = Color3.fromRGB(50,150,250)
button.TextColor3 = Color3.fromRGB(255,255,255)
button.Font = Enum.Font.SourceSansBold
button.TextSize = 20
button.Draggable = true -- üî• Permite mover o bot√£o!
button.Active = true
button.Parent = screenGui
return button
end
-- Bot√µes
local salvarBtn = createButton("SalvarBtn","üíæ Salvar Posi√ß√£o",UDim2.new(0,50,0,100))
local teleportBtn = createButton("TeleportBtn","‚ö° Teleportar",UDim2.new(0,50,0,160))
-- Fun√ß√£o salvar posi√ß√£o
salvarBtn.MouseButton1Click:Connect(function()
if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
savedPosition = player.Character.HumanoidRootPart.CFrame
salvarBtn.Text = "‚úÖ Posi√ß√£o Salva!"
task.wait(1.5)
salvarBtn.Text = "üíæ Salvar Posi√ß√£o"
end
end)
-- Fun√ß√£o teleportar
teleportBtn.MouseButton1Click:Connect(function()
if savedPosition and player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
player.Character.HumanoidRootPart.CFrame = savedPosition
else
teleportBtn.Text = "‚ö†Ô∏èNenhuma posi√ß√£o salva!"
task.wait(1.5)
teleportBtn.Text = "‚ö° Teleportar"
end
end)
